{
  "name": "@lordcraymen/rivetbench",
  "version": "0.2.0",
  "description": "Lightweight TypeScript framework for dual-exposed endpoints (REST + MCP).",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lordcraymen/rivetbench.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "rivetbench": "./dist/bin/rivetbench.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "node -e \"const fs=require('fs');fs.rmSync('dist',{recursive:true,force:true})\"",
    "dev:rest": "tsx src/server/rest.ts",
    "dev:mcp": "tsx src/server/mcp.ts",
    "dev:cli": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:bdd": "NODE_OPTIONS=\"--import tsx/esm\" npx cucumber-js test/features --import \"test/steps/*.ts\" --tags \"not @wip\"",
    "test:bdd:all": "NODE_OPTIONS=\"--import tsx/esm\" npx cucumber-js test/features --import \"test/steps/*.ts\"",
    "test:bdd:wip": "NODE_OPTIONS=\"--import tsx/esm\" npx cucumber-js test/features --import \"test/steps/*.ts\" --tags \"@wip\"",
    "test:ci": "npm run test:unit && npm run test:bdd",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "vitest related --run"
    ]
  },
  "keywords": [
    "rivetbench",
    "rest",
    "mcp",
    "fastify",
    "zod",
    "model-context-protocol",
    "rpc",
    "typescript",
    "dual-transport"
  ],
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "fastify": "^5.7.4",
    "fastmcp": "^3.19.0",
    "openapi-types": "^12.1.3",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.7.0",
    "@lordcraymen/adr-toolkit": "^3.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
