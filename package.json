{
  "name": "rivetbench",
  "version": "0.1.0",
  "description": "Lightweight TypeScript framework for dual-exposed endpoints (REST + MCP).",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit",
    "dev:rest": "tsx src/server/rest.ts",
    "dev:mcp": "tsx src/server/mcp.ts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:bdd": "NODE_OPTIONS='--import tsx/esm' cucumber-js test/features --import 'test/steps/*.ts' --tags 'not @wip'",
    "test:bdd:all": "NODE_OPTIONS='--import tsx/esm' cucumber-js test/features --import 'test/steps/*.ts'",
    "test:bdd:wip": "NODE_OPTIONS='--import tsx/esm' cucumber-js test/features --import 'test/steps/*.ts' --tags '@wip'",
    "test:ci": "npm run test:unit && npm run test:bdd",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "vitest related --run"
    ]
  },
  "keywords": [
    "rivetbench",
    "rest",
    "mcp",
    "fastify",
    "zod"
  ],
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.2.0",
    "fastify": "^4.26.2",
    "fastmcp": "^3.19.0",
    "openapi-types": "^12.1.3",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0"
  }
}
