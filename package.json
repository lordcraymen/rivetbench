{
  "name": "rivetbench",
  "version": "0.1.0",
  "description": "Lightweight TypeScript framework for dual-exposed endpoints (REST + MCP).",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit",
    "dev:rest": "tsx src/server/rest.ts",
    "dev:mcp": "tsx src/server/mcp.ts",
    "test": "vitest",
    "lint": "eslint .",
    "bdd": "cucumber-js"
  },
  "keywords": [
    "rivetbench",
    "rest",
    "mcp",
    "fastify",
    "zod"
  ],
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "fastify": "^4.26.2",
    "fastmcp": "^3.19.0",
    "zod": "^3.23.8",
    "openapi-types": "^12.1.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@types/node": "^20.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0",
    "tsx": "^4.7.1",
    "@typescript-eslint/parser": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^7.6.0"
  }
}
